<h1>Listing Profiles</h1>

<table>
   <thead>
       <tr>
          <th>Id</th>
          <th>name</th>
          <th>avatar</th>
          <th></th>
       </tr>
   </thead>

   <tbody>
     <% @profiles.each do |profile| %>
        <tr>
           <td><%= profile.id %></td>
           <td><%= profile.name %></td>
           <td><%= profile.avatar %></td>
           <td><%= link_to 'Show', profile_path(profile.id) %></td>
        </tr>
     <% end %>
   </tbody>
</table>

<%= link_to 'New', new_profile_path %>

